<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/jobTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:text="Need help in setting up" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:id="@+id/btnApply"
        android:layout_alignParentEnd="true"
        style="@style/Widget.AppCompat.Button.Colored"
        />

    <TextView
        android:id="@+id/priceTerms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jobTitle"
        android:layout_marginTop="20sp"
        android:text="Fixed Price" />

    <TextView
        android:id="@+id/timePosted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40sp"
        android:layout_toEndOf="@id/priceTerms"
        android:text="2hrs left"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Budget"
        android:id="@+id/budget"
        android:layout_below="@id/timePosted"
        android:layout_marginTop="20sp"
        />

    <TextView
        android:id="@+id/jobDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/budget"
        android:layout_marginTop="20sp"
        android:text="Need someone who have ever configured woocommerce" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jobDescription"
        android:layout_marginTop="20sp"
        android:text="Mpesa"
        android:textStyle="bold" />


</RelativeLayout>